@page "account%preferences"
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
@*<img src="@($"data:image/png;base64,{Convert.ToBase64String(Model.Input.ProfilePicture)}")"
     style="width: 200px;"
     class="rounded mx-auto d-block"
     alt="ProfilePicture" />*@
<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<form id="profile-form" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" placeholder="Please enter your first name" required />
                <label asp-for="Input.FirstName" class="form-label"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" placeholder="Please enter your last name" required />
                <label asp-for="Input.LastName" class="form-label"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            @*<div class="form-floating mb-3">*@
            @*                <input asp-for="Input.ProfileUsername" class="form-control" placeholder="@Model.Input.ProfileUsername" />
            <label asp-for="Input.ProfileUsername" class="form-label"></label>
            <span asp-validation-for="Input.ProfileUsername" class="text-danger"></span>
            </div>*@
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </div>
        <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @*<label asp-for="Input.ProfilePicture" style="width: 100%;"></label>*@
                @if (Model.Input.ProfilePicture != null)
                {
                    <label asp-for="Input.ProfilePicture"><img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))"></label>
                }
                else
                {
                    <label asp-for="Input.ProfilePicture"><img id="profilePicture" style="width:350px;height:350px; object-fit:cover" src="https://img.icons8.com/ios/256/test-account.png"></label>
                }
                <input type="file"
                       accept=".png,.jpg,.jpeg"
                       asp-for="Input.ProfilePicture"
                       class="form-control"
                       style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                       onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <form id="profile-bio-form" method="post">
                <div class="card">
                    <div class="card-title">
                        <div class="card-header">
                            <h3>Profile Bio</h3>
                        </div>
                    </div>
                    <div class="card-body">
                        <input asp-for="Input.ProfileBio" class="form-control"
                               placeholder="@Model.Input.ProfileBio" maxlength="501" />
                        <span asp-validation-for="Input.ProfileBio" class="text-danger"></span>
                    </div>
                </div>
                <button id="update-profile-bio-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
            </form>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
