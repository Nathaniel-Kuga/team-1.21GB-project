@using Microsoft.AspNetCore.Identity
@using Team121GBCapstoneProject.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@model Team121GBCapstoneProject.Models.GameInfo;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4" style="font-weight: bolder; margin-top: 5%;">Welcome to the Gaming Platform</h1>
    <p style="font-size: large; margin-top: 2%;">Here you can organize and keep track of your collection of games across all platforms.
       You can also rate and review games and see the top 100 games according to gamers like yourself.
       To get started please create a account, if you already have a account then you can log in below.
    </p>

    <div class="container">
        <div class="row">
            <div class="col-sm">
                @if (SignInManager.IsSignedIn(User))
                {
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <input type="button" 
                               value="Log Out" 
                               style="height:50px; 
                                      width:200px; 
                                      background-color: grey; 
                                      color: white; 
                                      font-weight: bolder; 
                                      border-color: black; 
                                      border-width: 2px; 
                                      border-radius: 10px;
                                      font-size: larger;"/>
                    </a>
                }
                else
                {
                    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
                        <input type="button" 
                               value="Log In" 
                               style="height:50px; 
                                      width:200px; 
                                      background-color: grey; 
                                      color: white; 
                                      font-weight: bolder; 
                                      border-color: black; 
                                      border-width: 2px; 
                                      border-radius: 10px;
                                      font-size: larger;"/>
                    </a>
                }

            </div>
            <div class="col-sm">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">
                <input type="button"
                       value="Create Account"
                       style="height:50px;
                              width:200px;
                              background-color: dodgerblue;
                              color: white;
                              font-weight: bolder;
                              border-color: black;
                              border-width: 2px;
                              border-radius: 10px;
                              font-size: larger;" />
                </a>
            </div>
        </div>
    </div>
    <h2 style="font-weight: bold; margin-top: 30px; margin-bottom: 20px;">Trending Games</h2>

