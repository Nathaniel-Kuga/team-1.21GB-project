@model Team121GBCapstoneProject.Models.GameInfo;
@{
    ViewData["Title"] = "Top 100 Games Page";
    string gameInfo = null;
}

<!-- ======= Breadcrumbs ======= -->
<section class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>Top 100 Games</h2>
            <ol>
                <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                <li>Top 100 Games</li>
            </ol>
        </div>

    </div>
</section><!-- End Breadcrumbs -->

<section class="inner-page">
    <div class="container">
        <div class="text-center">
            <h1 class="display-4" style="font-weight: bolder; margin-top: 5%;">Top 100 Games</h1>
            <h3>Last Updated: February 23, 2023</h3>
            <p>Ratings were collected from IGN.com and the title, description, and cover photo were all collected from Wikipedia</p>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Photo</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Rating</th>

                    </tr>
                </thead>
                <tbody>
                    @{
                        int j = 1;
                        @for (int i = 0; i < 100; i++)
                        {
                            <tr>
                                <th scope="row">@j</th>
                                <td>
                                    @{
                                        gameInfo = null;
                                        gameInfo += $"Release Year: {Model.games[i].YearPublished}";
                                        gameInfo += "\nGenres: ";
                                        foreach (var genre in Model.games[i].GameGenres)
                                        {
                                            gameInfo += $"{genre.Genre.Name} ";
                                        }
                                        gameInfo += "\n| Platforms: ";
                                        foreach (var platform in Model.games[i].GamePlatforms)
                                        {
                                            gameInfo += $"{platform.Platform.Name} ";
                                        }
                                    }
                                    <span class="hovertext2" data-hover="@gameInfo">
                                        <img src=@($"{Model.games[i].CoverPicture}") width="200px" height="200px" />
                                    </span>
                                </td>
                                <td style="font-weight: bold;">@Model.games[i].Title</td>
                                <td>@Model.games[i].Description</td>
                                <td style="background-color: @Model.backgroundColor[i]; color: white; font-weight: bolder; text-align: center; font-size: larger">@Model.games[i].AverageRating</td>
                            </tr>
                            j++;

                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>









